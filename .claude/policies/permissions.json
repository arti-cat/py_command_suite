{
  "write_root": ".claude/",
  "allow": [
    "read(**/*.md)",
    "read(**/*.py)",
    "read(**/*.json)",
    "read(**/*.toml)",
    "read(**/*.yaml)",
    "read(**/*.yml)",
    "read(**/README*)",
    "read(**/CHANGELOG*)",
    "grep(*,*)",
    "write(.claude/**)",
    "git(status)",
    "git(diff)",
    "git(log:--oneline:--max-count=10)",
    "bash(ls:*)",
    "bash(find:.:-name:*.py:-type:f)",
    "bash(find:.:-name:*.md:-type:f)",
    "bash(tree:.claude)",
    "bash(wc:-l:*)",
    "http(*://docs.*)",
    "http(*://api.*)"
  ],
  "deny": [
    "read(./.env)",
    "read(./.env.*)",
    "read(./secrets/**)",
    "read(**/*secret*)",
    "read(**/*password*)",
    "read(**/*key*)",
    "write(../**)",
    "write(~/**)",
    "write(/tmp/**)",
    "bash(curl:*)",
    "bash(wget:*)",
    "bash(rm:*)",
    "bash(rmdir:*)",
    "bash(mv:*)",
    "bash(cp:*:../**)",
    "bash(chmod:*)",
    "bash(chown:*)",
    "bash(sudo:*)",
    "bash(*:>:*)",
    "bash(*:>>:*)",
    "git(push:*)",
    "git(commit:*)",
    "git(merge:*)",
    "git(rebase:*)",
    "git(reset:*)"
  ],
  "context_limits": {
    "max_tokens_per_file": 2000,
    "max_files_per_task": 10,
    "max_http_requests": 5,
    "max_snippet_length": 1000
  },
  "safety_rules": [
    "Never write outside the designated write_root",
    "Always validate file paths before operations", 
    "Reject any operations that could modify system files",
    "Log all file operations for audit trail",
    "Require explicit permission for destructive operations"
  ]
}